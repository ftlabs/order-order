<!DOCTYPE html>
<html lang="en">
{{#> head title='Structured debate' subtitle='Structured debate' type='structured' }}
{{/head}}

<body>
    {{> user/header username=user.username }}

    <main class="o-grid-container">
        <h1>{{title}}</h1>
        <p>{{description}}</p>
        {{#if commentsAgainst}}
        <div>
            <p>Against</p>
            {{#each commentsAgainst}}
            {{content}}
            {{/each}}
        </div>
        {{/if}}
        {{#if commentsFor}}
        <div>
            <p>For</p>
            {{#each commentsFor}}
            {{content}}
            {{/each}}
        </div>
        {{/if}}
    </main>
{{> footer type='structured' }}
