{{> head title='Admin edit new debate' subtitle='Admin section' }}
{{> admin/header }}

{{> alert }}

<main class="o-grid-container">
	<h1 class="admin-section">Edit debate</h1>
	<div class="o-grid-row">
		{{#if debate}}
		<section class="admin-content">
			<form id="form_edit_debate">
				<div class="o-forms">
					<label for="id">Debate ID</label>
					<input type="text" name="id" value="{{debate.id}}" class="o-forms__text" disabled required />
					<div id="msg_error" class="error o-forms__errortext hide" data-validation="id"></div>
				</div>
				<div class="o-forms">
					<label for="debateType" class="o-forms__label">Debate type</label>
					<input type="text" name="id" value="{{debate.debateType}}" class="o-forms__text" disabled
						required />
					<div id="msg_error" class="error o-forms__errortext hide" data-validation="debateType"></div>
				</div>
				<div class="o-forms">
					<label for="title" class="o-forms__label">Title</label>
					<input type="text" name="title" value="{{debate.title}}" class="o-forms__text" required />
					<div id="msg_error" class="error o-forms__errortext hide" data-validation="title"></div>
				</div>
				<div class="o-forms">
					<label for="debateDescription" class="o-forms__label">Description</label>
					<input type="text" name="debateDescription" class="o-forms__text" value="{{debate.description}}"
						required />
					<div id="msg_error" class="error o-forms__errortext hide" data-validation="description"></div>
				</div>
				<div class="o-forms">
					<label for="debateStatus" class="o-forms__label">Debate status</label>
					<select name="debateStatus" class="o-forms__select" required>
						<option value="open" {{#ifEquals debate.debateStatus "open"}}selected{{/ifEquals}}>Open</option>
						<option value="closed" {{#ifEquals debate.debateStatus "closed"}}selected{{/ifEquals}}>Closed
						</option>
					</select>
					<div id="msg_error" class="error o-forms__errortext hide" data-validation="debateStatus"></div>
				</div>
				<div class="o-forms">
					<label for="votingStatus" class="o-forms__label">Voting status</label>
					<select name="votingStatus" class="o-forms__select" required>
						<option value="open" {{#ifEquals debate.votingStatus "open"}}selected{{/ifEquals}}>Open</option>
						<option value="closed" {{#ifEquals debate.votingStatus "closed"}}selected{{/ifEquals}}>Closed
						</option>
					</select>
					<div id="msg_error" class="error o-forms__errortext hide" data-validation="votingStatus"></div>
				</div>
				<div class="o-forms">
					<button type="submit" class="o-buttons o-buttons--primary" id="submit_edit_debate">Update
						debate</button>
				</div>
			</form>
		</section>
		{{/if}}
	</div>
</main>

{{> footer type="admin"}}