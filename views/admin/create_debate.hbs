{{> admin/header title='Admin create new debate' subtitle='Admin section' }}

<div id="msg_status" class="status hide">
	Messages go here
</div>

<main>
	<h2>
		Create Debate
	</h2>
	<form id="form_new_debate">
		<div id="msg_error" class="error hide"></div>
		<label for="type">Debate type</label>
		<select name="type" required disabled>
			<option selected value="structured">Structured debate</option>
			<option value="hats">Hats</option>
			<option value="interview">Interview</option>
		</select>
		<label for="name">Name</label>
		<input type="text" name="name" placeholder="Name" required />
		<fieldset>
			<legend>Information that is publicly visible on the page</legend>
			<label for="title">Title</label>
			<input type="text" name="title" placeholder="Title" required />
			<label for="debateDescription">Description</label>
			<input type="text" name="debateDescription" placeholder="Description" required />
		</fieldset>
		<label for="status">Status</label>
		<select name="status" required>
			<option selected>Open</option>
			<option>Closed</option>
		</select>
		<label for="voting_status">Voting status</label>
		<select name="voting_status" required>
			<option selected>Open</option>
			<option>Closed</option>
		</select>
		<button id="submit_new_debate">Create new debate</button>
	</form>
</main>

{{> admin/footer}}