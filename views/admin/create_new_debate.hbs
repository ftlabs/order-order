{{> admin/header title='Admin create new debate' subtitle='Admin section' }}

<div id="msg_status" class="status hide">
	Messages go here
</div>

<main>
	<h2>
		Create New Debate
	</h2>
	<form id="form_new_debate">
		<div id="msg_error" class="error hide"></div>
		<label for="type">Debate type</label>
		<select name="type">
			<option selected>Structured debate</option>
			<option>Hats</option>
			<option>Interview</option>
		</select>
		<label for="name">Name</label>
		<input type="text" name="name" placeholder="Name" />
		<label for="title">Title</label>
		<input type="text" name="title" placeholder="Title" />
		<label for="description">Description</label>
		<input type="text" name="description" placeholder="Description" />
		<label for="series_order">Series Order</label>
		<select name="series_order">
			<option selected>1</option>
			<option>2</option>
			<option>3</option>
		</select>
		<label for="state_open">Open?</label>
		<select name="state_open">
			<option selected>Open</option>
			<option>Closed</option>
		</select>
		<label for="state_votable">Votable?</label>
		<select name="state_votable">
			<option selected>True</option>
			<option>False</option>
		</select>
		<button id="submit_new_debate">Create new debate</button>
	</form>
</main>

{{> admin/footer}}