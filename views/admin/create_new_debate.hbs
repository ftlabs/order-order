{{> admin/header title='Admin create new debate' subtitle='Admin section' }}

<div id="msg_status" class="status hide">
	Messages go here
</div>

<main>
	<h2>
		Create New Debate
	</h2>
	<form id="form_new_debate">
		<div id="msg_error" class="error hide"></div>
		<label for="type">Debate type</label>
		<select name="type" required>
			<option selected>Structured debate</option>
			<option>Hats</option>
			<option>Interview</option>
		</select>
		<label for="name">Name</label>
		<input type="text" name="name" placeholder="Name" required />
		<fieldset>
			<legend>Information that is publicly visible on the page</legend>
			<label for="title">Title</label>
			<input type="text" name="title" placeholder="Title" required />
			<label for="debateDescription">Description</label>
			<input type="text" name="debateDescription" placeholder="Description" required />
		</fieldset>
		<label for="series_order">Series Order</label>
		<div class="additional-info">If this debate is part of a series, select the order it should appear in</div>
		<select name="series_order" required>
			<option selected>1</option>
			<option>2</option>
			<option>3</option>
		</select>
		<label for="state_open">Open?</label>
		<select name="state_open" required>
			<option selected>Open</option>
			<option>Closed</option>
		</select>
		<label for="state_votable">Votable?</label>
		<select name="state_votable" required>
			<option selected>True</option>
			<option>False</option>
		</select>
		<button id="submit_new_debate">Create new debate</button>
	</form>
</main>

{{> admin/footer}}